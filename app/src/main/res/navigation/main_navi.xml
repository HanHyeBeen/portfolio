<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navi"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.guru16application.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_clothingFragment"
            app:destination="@id/clothingFragment" />
        <action
            android:id="@+id/action_homeFragment_to_foodFragment"
            app:destination="@id/foodFragment" />
        <action
            android:id="@+id/action_homeFragment_to_shelterFragment"
            app:destination="@id/shelterFragment" />
    </fragment>
    <fragment
        android:id="@+id/clothingFragment"
        android:name="com.example.guru16application.ClothingFragment"
        android:label="fragment_clothing"
        tools:layout="@layout/fragment_clothing" >
        <action
            android:id="@+id/action_clothingFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_clothingFragment_to_foodFragment"
            app:destination="@id/foodFragment" />
        <action
            android:id="@+id/action_clothingFragment_to_shelterFragment"
            app:destination="@id/shelterFragment" />
    </fragment>
    <fragment
        android:id="@+id/foodFragment"
        android:name="com.example.guru16application.FoodFragment"
        android:label="fragment_food"
        tools:layout="@layout/fragment_food" >
        <action
            android:id="@+id/action_foodFragment_to_clothingFragment"
            app:destination="@id/clothingFragment" />
        <action
            android:id="@+id/action_foodFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_foodFragment_to_shelterFragment"
            app:destination="@id/shelterFragment" />
    </fragment>
    <fragment
        android:id="@+id/shelterFragment"
        android:name="com.example.guru16application.ShelterFragment"
        android:label="fragment_shelter"
        tools:layout="@layout/fragment_shelter" >
        <action
            android:id="@+id/action_shelterFragment_to_clothingFragment"
            app:destination="@id/clothingFragment" />
        <action
            android:id="@+id/action_shelterFragment_to_foodFragment"
            app:destination="@id/foodFragment" />
        <action
            android:id="@+id/action_shelterFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>